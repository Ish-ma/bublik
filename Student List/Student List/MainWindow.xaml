<Window x:Class="Student_List.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Список студентов" Height="350" Width="525">
    <DockPanel>
        <Label DockPanel.Dock="Top">Студенты:</Label>
        <DataGrid Name="dataGrid" AutoGenerateColumns="True" DockPanel.Dock="Top" />
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" >
            <Button x:Name="addButton" VerticalAlignment="Bottom" Click="addButton_Click" Content="Добавить" />
            <Button x:Name="loadFromXmlButton" VerticalAlignment="Bottom" Content="Загрузить" Click="loadFromXmlButton_Click" />
            <Button x:Name="saveToXmlButton" VerticalAlignment="Bottom" Content="Сохранить" Click="saveToXmlButton_Click" />
            <Button x:Name="serializeButton" VerticalAlignment="Bottom"  Content="Сериализовать" Click="serializeButton_Click" />
            <Button x:Name="deserializeButton" VerticalAlignment="Bottom" Content="Десериализовать" Click="deserializeButton_Click" />
        </StackPanel>
    </DockPanel>
</Window>
